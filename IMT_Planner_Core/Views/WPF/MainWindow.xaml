<Window x:Class="IMT_Planner.Views.WPF.MainWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:IMT_Planner"
                     xmlns:sys="clr-namespace:System;assembly=System.Runtime"
                     xmlns:imtChronoPlannerModel="clr-namespace:IMT_Planner_Model;assembly=IMT_Planner_Model"
                     xmlns:userControls="clr-namespace:IMT_Planner.Views.WPF.UserControls"
                     xmlns:converter="clr-namespace:IMT_Planner.Views.Converter"
                     xmlns:global="clr-namespace:"
                     mc:Ignorable="d"
                     Title="MainWindow" MinHeight="600" MinWidth="1600">
    <Window.Resources>
        <converter:LevelToBrushConverter x:Key="LevelToBrushConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Define columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0" Grid.ColumnSpan="2"
            Margin="10,00,0,10"
            BorderBrush="{DynamicResource MahApps.Brushes.Red}"
            BorderThickness="1">
             <ItemsControl x:Name="ItemsControlSuperManager" ItemsSource="{Binding SuperManagerCollection}">
                 <ItemsControl.ItemTemplate>
                     <DataTemplate>
                         <Border BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="10" Margin="5" 
                                 Background="{Binding Level, Converter={StaticResource LevelToBrushConverter}}">
                             <Grid>
                                 <Grid.RowDefinitions>
                                     <RowDefinition Height="1.5*"/>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition Height="Auto"/>
                                 </Grid.RowDefinitions>
                                 <Grid.ColumnDefinitions>
                                     <ColumnDefinition Width="Auto" />
                                     <ColumnDefinition Width="*" />
                                 </Grid.ColumnDefinitions>

                                 <TextBlock FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Text="{Binding Name}" Grid.ColumnSpan="2"/>

                                 <TextBlock FontWeight="Bold" Text="Rarity: " HorizontalAlignment="Left" Grid.Row="1"/>
                                 <TextBlock Text="{Binding Rarity}" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1"/>

                                 <TextBlock FontWeight="Bold" Text="Area: " HorizontalAlignment="Left" Grid.Row="2"/>
                                 <TextBlock Text="{Binding Area}" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="2"/>

                                 <TextBlock FontWeight="Bold" Text="Rank: " HorizontalAlignment="Left" Grid.Row="3"/>
                                 <TextBlock Text="{Binding Rank}" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="3"/>

                                 <TextBlock FontWeight="Bold" Text="Level: " HorizontalAlignment="Left" Grid.Row="4"/>
                                 <TextBlock Text="{Binding Level}" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="4"/>

                                 <TextBlock FontWeight="Bold" Text="Promoted: " HorizontalAlignment="Left" Grid.Row="5"/>
                                 <TextBlock Text="{Binding Promoted}" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="5"/>
                             </Grid>
                         </Border>
                     </DataTemplate>
                 </ItemsControl.ItemTemplate>
                 <ItemsControl.ItemsPanel>
                     <ItemsPanelTemplate>
                         <WrapPanel Orientation="Horizontal" />
                     </ItemsPanelTemplate>
                 </ItemsControl.ItemsPanel>
             </ItemsControl>
             <!-- <TabControl> -->
             <!--     <TabItem Header="Chrono"> -->
             <!--         <userControls:ChronoPlannerControl/> -->
             <!--     </TabItem> -->
             <!--     <TabItem Header="SuperManager"> -->
             <!--         <userControls:SuperManagerControl/> -->
             <!--     </TabItem> -->
             <!--     <TabItem Header="Stuff"> -->
             <!--         <userControls:SuperManagerControl/> -->
             <!--     </TabItem> -->
             <!-- </TabControl> -->
             </Border>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1" VerticalAlignment="Bottom">
            <Button Command="{Binding LoadCommand}" Content="Load" Width="100" Height="50" Margin="5"/>
            <Button Command="{Binding SaveCommand}" Content="Save" Width="100" Height="50" Margin="5"/>
        </StackPanel>
    </Grid>
    

</Window>
