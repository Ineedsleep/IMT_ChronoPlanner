<Window
    x:Class="IMT_Planner.Views.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:IMT_Planner.Views.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:imtChronoPlannerModel="clr-namespace:IMT_Planner_Model;assembly=IMT_Planner_Model"
    xmlns:local="clr-namespace:IMT_Planner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    xmlns:userControls="clr-namespace:IMT_Planner.Views.WPF.UserControls"
    Title="MainWindow"
    MinWidth="1600"
    MinHeight="600"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:LevelToBrushConverter x:Key="LevelToBrushConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

<userControls:SuperManagerOverview/>

<GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

<userControls:SuperManagerControl Grid.Column="2"></userControls:SuperManagerControl>

<StackPanel Grid.Column="2"
    HorizontalAlignment="Right"
    VerticalAlignment="Bottom"
    Orientation="Horizontal">
    <Button
        Width="100"
        Height="50"
        Margin="5"
        Command="{Binding LoadCommand}"
        Content="Load" />
    <Button
        Width="100"
        Height="50"
        Margin="5"
        Command="{Binding SaveCommand}"
        Content="Save" />
</StackPanel>
    </Grid>
    


</Window>
