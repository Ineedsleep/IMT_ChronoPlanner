<UserControl x:Class="IMT_Planner.Views.WPF.UserControls.FilterSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:IMT_Planner.Views.WPF.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
           <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Command Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Apply Filter" Command="{Binding ApplyFilterCommand}" Margin="5"/>
            <Button Content="Reset Filter" Command="{Binding ResetFilterCommand}" Margin="5"/>
        </StackPanel>

        <!-- Level and Rank Filters -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <!-- Level -->
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Level"/>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock Text="Min"/>
                        <TextBox Text="{Binding LevelMin, Mode=TwoWay}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock Text="Max"/>
                        <TextBox Text="{Binding LevelMax, Mode=TwoWay}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Rank -->
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Rank"/>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock Text="Min"/>
                        <TextBox Text="{Binding RankRangeMin, Mode=TwoWay}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock Text="Max"/>
                        <TextBox Text="{Binding RankRangeMax, Mode=TwoWay}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock Text="Exact"/>
                        <TextBox Text="{Binding Rank, Mode=TwoWay}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- ItemControl for Element Filters -->
        <ItemsControl Grid.Row="2" ItemsSource="{Binding CardFilters}" Margin="10">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Gray" Margin="5" Padding="10">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Element Name" FontWeight="Bold" />
                            <TextBox Text="{Binding Element.Name, Mode=TwoWay}"/>
                            <TextBlock Text="Effectiveness Type" FontWeight="Bold" />
                            <TextBox Text="{Binding EffectivenessType, Mode=TwoWay}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- CIF / MIF Group -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <!-- CIF -->
            <CheckBox Content="CIF" 
                      IsChecked="{Binding HasCIF, Mode=TwoWay}" Margin="5"/>
            <!-- MIF -->
            <CheckBox Content="MIF" 
                      IsChecked="{Binding HasMIF, Mode=TwoWay}" Margin="5"/>
        </StackPanel>
    </Grid>
        
        
        
        
        
        
        
        
